<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editForm1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/input_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TranslateBtn1"
        android:layout_width="405dp"
        android:layout_height="53dp"
        android:text="@string/translate"
        app:layout_constraintBottom_toTopOf="@+id/editForm1"
        app:layout_constraintEnd_toEndOf="@id/editForm1"
        app:layout_constraintStart_toStartOf="@id/editForm1"
        app:layout_constraintTop_toBottomOf="@+id/viewForm1" />

    <TextView
        android:id="@+id/viewForm1"
        android:layout_width="381dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TranslateBtn1" />

    <ScrollView
        android:layout_width="42dp"
        android:layout_height="42dp"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="507dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
